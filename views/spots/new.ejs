<!DOCTYPE html>
<html lang="en" <% if (darkmode) { %> data-bs-theme="dark"
<% }
else{
%> data-bs-theme="light" <%
} %>>
<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">New Spot</h1>
        <div class="col-6 offset-3">
            <form action="/spots" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="spot[title]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Title is required.
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="spot[location]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Location is required.
                    </div>
                </div>
                <div class="mb-3">
                    <label for="formFileMultiple" class="form-label">Choose Images</label>
                    <input class="form-control" name="image" type="file" id="formFileMultiple" multiple required>                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Image is required.
                    </div>
                  </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="spot[description]"
                        required></textarea>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Description is required.
                        </div>
                </div>
                <button type="submit" class="btn btn-success mt-3 mb-3">Add Study Spot</button>
            </form>
            <a class="mt-3" href="/spots">All spots</a>
        </div>
    </div>

    