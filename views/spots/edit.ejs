<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit Spot</h1>
        <div class="col-6 offset-3">
            <form action="/spots/<%= spot._id %>?_method=PUT" method="POST" novalidate class="validated-form"
                enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="spot[title]" value="<%= spot.title %>"
                        required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="spot[location]"
                        value="<%= spot.location %>" required>
                </div>
                <div class="mb-3">
                    <label for="formFileMultiple" class="form-label">Add more Images</label>
                    <input class="form-control" name="image" type="file" id="formFileMultiple" multiple>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Image is required.
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="spot[description]"
                        required><%= spot.description %></textarea>
                </div>
                <div class="mb-3">
                    <% spot.images.forEach(function(img, i) { %>
                        <img src="<%= img.thumbnail %>" alt="" class="img-thumbnail">
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%=i%>" name="deleteImages[]"
                                value="<%=img.filename%>">
                        </div>
                        <label for="image-<%=i%>">Delete?</label>
                        <% }) %>
                </div>
                <button type="submit" class="btn btn-info mt-3 mb-3">Update Spot</button>
            </form>
            <a href="/spots/<%= spot._id %>">Back to Spot</a>
        </div>
    </div>