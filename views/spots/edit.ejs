<% layout('layouts/boilerplate') %>
<h1>Edit Spot</h1>
<form action="/spots/<%= studySpot._id %>?_method=PUT" method="POST">
    <div>
        <label for="title">Title</label>
        <input type="text" id="title" name="studySpot[title]" value="<%= studySpot.title %>">
    </div>
    <div>
        <label for="location">Location</label>
        <input type="text" id="location" name="studySpot[location]" value="<%= studySpot.location %>">
    </div>
    <button>Update Spot</button>
</form>
<a href="/spots/<%= studySpot._id %>">Back to Spot</a>