<% layout('layouts/boilerplate') %>
<h1>all study spots</h1>
<div>
    <a href="/spots/new">Add spot</a>
</div>
<ul>
    <% for( let spot of spots ) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" src="<%= spot.images[0].url %>" alt="">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="cart-title"><%= spot.title %></h5>
                        <p class="card-text"> <%= spot.description %></p>
                        <p class="card-text">
                            <small class="text-muted"> <%= spot.location %></small>
                        </p>
                        <a class="btn btn-primary" href="spots/<%= spot.id %>">View <%= spot.title %></a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
</ul>
