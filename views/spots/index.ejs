<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/images.css">
    <div id="cluster-map" style="width: 100%; height: 500px"></div>
    <h1>All Spots</h1>
    <ul>
        <% for( let spot of spots ) { %>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <% if (spot.images.length> 0) { %>
                            <img class="img-fluid" src="<%= spot.images[0].url %>" alt="">
                            <% }else { %>
                                <img src="" alt="">
                                <% } %>

                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="cart-title">
                                <%= spot.title %>
                            </h5>
                            <p class="card-text">
                                <%= spot.description %>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <%= spot.location %>
                                </small>
                            </p>
                            <a class="btn btn-primary" href="spots/<%= spot.id %>">View <%= spot.title %></a>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
    </ul>

    <script>
        const mapToken = '<%- process.env.MAPBOX_TOKEN %>'
        const spots = {features: <%- JSON.stringify(spots) %>}
    </script>

    <script src="/javascripts/clusterMap.js"></script>