<link rel="stylesheet" href="/stylesheets/signIn.css">
<% layout('layouts/boilerplate') %>

<main class="form-signin w-100 m-auto">
    <form action="/sign-in" method="POST" class="validated-form" novalidate>
      <h1 class="h3 mb-3 fw-normal"> <b>Sign in</b></h1>
  
      <div class="form-floating">
        <input type="text" class="form-control" id="username" name="username" placeholder="Username" required autofocus>
        <label for="username">Username</label>
      </div>
      <div class="form-floating">
        <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
        <label for="password">Password</label>
      </div>
  
      <div class="form-check text-start my-3">
        <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
        <label class="form-check-label" for="flexCheckDefault">
          Remember me
        </label>
      </div>
      <button class="btn btn-primary w-100 py-2" type="submit">Sign in</button>
      <!-- <p class="mt-5 mb-3 text-body-secondary">By logging in to StudySpotter, I confirm that I have read and agree to the StudySpotter Terms of Service, Privacy Policy, and to receive emails and updates.</p> -->
    </form>
  </main>